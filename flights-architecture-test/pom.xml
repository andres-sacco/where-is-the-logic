    <artifactId>flights-architecture-test</artifactId>
    <version>1.0.6</version>

    <properties>
        <main.basedir>${project.basedir}</main.basedir>

        <!-- General -->
        <archunit-junit5.version>1.2.1</archunit-junit5.version>
        <objenesis.version>3.3</objenesis.version>
        <junit-jupiter.version>5.8.2</junit-jupiter.version>
        <junit-platform-engine.version>1.9.3</junit-platform-engine.version>

        <!-- Maven -->
        <arch-unit-build-plugin-core.version>3.1.1</arch-unit-build-plugin-core.version>
